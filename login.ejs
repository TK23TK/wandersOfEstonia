<% include ./partials/header %>

<div class="jumbotron">
    <h1 style="align-content: center" class="text-white p-2 text-center">Login!</h1>
</div>

<div style="width: 30%; margin: 25px auto;" class="container">
    <form action="/login" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="username" placeholder="username">
        </div>
        <div class="form-group">
            <input class="form-control" type="password" name="password" placeholder="password">
        </div>
        <button class="btn btn-lg btn-success btn-block float">Login</button>
    </form>
</div>